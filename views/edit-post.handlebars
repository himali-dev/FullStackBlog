<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title mt-5">Edit Article</h2><hr>
  <form class="edit-post-form">
    <div>
        <label for="post-title">Article Title:</label>
      <input class="input" name="post-title" type="text" value="{{Post.title}}" />
    </div>
    <div>
        <label for="post-content">Article Content:</label>
      <input class="textarea" name="post-content" type="text" value="{{Post.article_content}}" />
    </div>
    <div class="is-pulled-right">
       created by you on {{format_date post.created_at}}
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">Save Article</button>
    <button type="button" class="button is-danger delete-post-btn">Delete Article</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
